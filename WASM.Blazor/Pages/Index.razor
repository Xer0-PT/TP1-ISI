            <MudListItem Icon="@Icons.Material.Filled.ArrowRight">
                Potenciar a experiência no desenvolvimento de aplicações e assimilar conteúdos lecionados na UC.
            </MudListItem>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;" Link="/about">About us</MudButton>

